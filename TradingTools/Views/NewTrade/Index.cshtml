@using global::Shared
@model NewTradeVM

@{
    ViewData["Title"] = "Paper Trades";
}

<div class="row justify-content-center align-items-top">
    <div class="col-8 text-center">
        <h2>New Trade</h2>
        <div class="container mb-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-auto d-flex align-items-center flex-wrap justify-content-center">
                    <!-- Menu Status -->
                    <partial name="_NewTradeMenuButtons"/>
                </div>
                <!-- Menu buttons ends -->
                <!-- Card prices and screenshots -->
                <div class="col-12 col-md-auto d-flex align-items-center flex-wrap justify-content-center" id="newTradeForm">
                    <div class="col-10 justify-content-center align-items-center mt-4">
                        <div class="card border-left-success shadow">
                            <div class="card-body d-flex justify-content-around align-items-center">
                                <div class="row w-100">
                                    <div class="col-6 d-flex flex-row justify-content-center align-items-center">
                                        <div class="w-100 p-4">
                                            <div class="form-group">
                                                <label for="input1">Entry Price</label>
                                                <input type="text" class="form-control" id="input1" placeholder="Enter text">
                                            </div>
                                            <div class="form-group">
                                                <label for="input2">Stop Price</label>
                                                <input type="text" class="form-control" id="input2" placeholder="Enter text">
                                            </div>
                                            <div class="form-group">
                                                <label for="input2">Max Price</label>
                                                <input type="text" class="form-control" id="input2" placeholder="Enter text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6 d-flex flex-row justify-content-between align-items-center">
                                        <div class="text-center p-4" style="border: 2px dashed #ccc; cursor: pointer;" onclick="document.getElementById('filesInput').click()">
                                            <form method="post" enctype="multipart/form-data" id="formUploadFiles" asp-action="UploadScreenshots">
                                                <input type="file" name="screenshots" id="filesInput" class="d-none" multiple />
                                                <i class="fa-solid fa-file-arrow-up fa-2x text-primary"></i>
                                                <span class="mt-2 d-block">Upload Screenshots</span>
                                            </form>
                                        </div>
                                        <div class="text-center p-4 w-75" id="fileList" style="overflow: hidden;">
                                            <p class="text-truncate">No uploaded files.</p>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Card research data -->
                    <div class="col-10 justify-content-center align-items-center mt-4">
                        <div class="card border-left-info shadow">
                            <partial name="/Views/Shared/_ResearchFirstBarPullbackData.cshtml" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10 mt-4">
                    <div class="card-footer mt-2 d-flex justify-content-end">
                        <button class="btn btn-warning" id="btnClear">
                            <span class="text"><i class="fa-solid fa-broom mr-2"></i>Clear</span>
                        </button>
                        <button class="btn btn-info ml-1" id="btnSave">
                            <span class="text"><i class="fa-regular fa-floppy-disk mr-2"></i>Save</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/newTrade.js"></script>
}
