@model NewTradeVM
<div class="row justify-content-center">
    <div class="text-center">
            <div class="card-header">
                <!-- Header tabs begin -->
                <div class="col mr-md-5 d-flex justify-content-center">
                    <div id="journalTabHeaders">
                        <ul class="nav nav-tabs" id="journalTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="pnl-tab" data-toggle="tab" data-target="#pnl" type="button" role="tab" aria-controls="pnl" aria-selected="true">PnL</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" id="entry-tab" data-toggle="tab" data-target="#entry" type="button" role="tab" aria-controls="entry" aria-selected="false">Entry</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" id="priceActionContext-tab" data-toggle="tab" data-target="#priceActionContext" type="button" role="tab" aria-controls="priceActionContext" aria-selected="false">PA Context</button>
                            </li>
                            <li class="nav-item">
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Header tabs ends -->
            </div>
            <!-- Card body begins -->
            <div class="card-body" id="cardBody">
                <div class="tab-content">
                    <!-- Tab content PnL -->
                    <div class="tab-pane fade show active tundora text-left" id="pnl" role="tabpanel" aria-labelledby="pnl-tab">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-wrap">
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="OneToOneHitOnInput">1:1 hit on</label>
                                        <input class="text-center form-control" id="OneToOneHitOnInput" data-bind="OneToOneHitOnDisplay" value="@Model.CurrentTrade.OneToOneHitOnDisplay" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsOneToThreeHitInput">1:3 hit</label>
                                        <select class="text-center form-control" id="IsOneToThreeHitInput" data-bind="IsOneToThreeHitDisplay" asp-for="CurrentTrade.IsOneToThreeHitDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsOneToFiveHitInput"> 1:5 hit</label>
                                        <select class="text-center form-control" id="IsOneToFiveHitInput" data-bind="IsOneToFiveHitDisplay" asp-for="CurrentTrade.IsOneToFiveHitDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsBreakevenInput">Breakeven</label>
                                        <select class="text-center form-control" id="IsBreakevenInput" data-bind="IsBreakevenDisplay" asp-for="CurrentTrade.IsBreakevenDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsLossInput">Loss</label>
                                        <select class="text-center form-control" id="IsLossInput" data-bind="IsLossDisplay" asp-for="CurrentTrade.IsLossDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="MaxRRInput">Max RR</label>
                                        <input class="text-center form-control" id="MaxRRInput" data-bind="MaxRRDisplay" value="@Model.CurrentTrade.MaxRRDisplay" />
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="MarketGaveSmthInput">Market gave smth</label>
                                        <select class="text-center form-control" id="MarketGaveSmthInput" data-bind="MarketGaveSmthDisplay" asp-for="CurrentTrade.MarketGaveSmthDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <div class="form-group col-12 col-md-6 col-lg">
                                    <label class="d-block text-nowrap min-width-60" for="Comment">Comment</label>
                                    <input class="text-justify form-control" id="Comment" data-bind="CommentDisplay" value="@Model.CurrentTrade.CommentDisplay" />
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- Tab content Entry -->
                    <div class="tab-pane fade show tundora text-left" id="entry" role="tabpanel" aria-labelledby="entry-tab">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-wrap">
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryAfteriBarDisplayInput">Entry after i bar</label>
                                        <select class="text-center form-control" id="IsEntryAfteriBarDisplayInput" data-bind="IsEntryAfteriBarDisplay" asp-for="CurrentTrade.IsEntryAfteriBarDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsSignalBarInTradeDirectionInput">Signal bar in my direction</label>
                                        <select class="text-center form-control" id="IsSignalBarInTradeDirectionInput" data-bind="IsSignalBarInTradeDirectionDisplay" asp-for="CurrentTrade.IsSignalBarInTradeDirectionDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryAfter3To5BarsInput">Entry at 3-5 bars</label>
                                        <select class="text-center form-control" id="IsEntryAfter3To5BarsInput" data-bind="IsEntryAfter3To5BarsDisplay" asp-for="CurrentTrade.IsEntryAfter3To5BarsDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryAfter5BarsInput">Entry after 5 bars</label>
                                        <select class="text-center form-control" id="IsEntryAfter5BarsInput" data-bind="IsEntryAfter5BarsDisplay" asp-for="CurrentTrade.IsEntryAfter5BarsDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryBeforePreviousSwingOnTriggerDisplay">Entry before prev swing on trigger</label>
                                        <select class="text-center form-control" id="IsEntryBeforePreviousSwingOnTriggerInput" data-bind="IsEntryBeforePreviousSwingOnTriggerDisplay" asp-for="CurrentTrade.IsEntryBeforePreviousSwingOnTriggerDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryAtPreviousSwingOnTriggerInput">Entry at prev swing on trigger</label>
                                        <select class="text-center form-control" id="IsEntryAtPreviousSwingOnTriggerInput" data-bind="IsEntryAtPreviousSwingOnTriggerDisplay" asp-for="CurrentTrade.IsEntryAtPreviousSwingOnTriggerDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryBeforePreviousSwingOn4HInput">Entry before prev swing on 4H</label>
                                        <select class="text-center form-control" id="IsEntryBeforePreviousSwingOn4HInput" data-bind="IsEntryBeforePreviousSwingOn4HDisplay" asp-for="CurrentTrade.IsEntryBeforePreviousSwingOn4HDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsEntryBeforePreviousSwingOnDInput">Entry before prev swing on D</label>
                                        <select class="text-center form-control" id="IsEntryBeforePreviousSwingOnDInput" data-bind="IsEntryBeforePreviousSwingOnDDisplay" asp-for="CurrentTrade.IsEntryBeforePreviousSwingOnDDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tab content Price Aaction Context -->
                    <div class="tab-pane fade show tundora text-left" id="priceActionContext" role="tabpanel" aria-labelledby="priceActionContext-tab">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-wrap">
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsMomentumTradeInput">Momentum trade</label>
                                        <select class="text-center form-control" id="IsMomentumTradeInput" data-bind="IsMomentumTradeDisplay" asp-for="CurrentTrade.IsMomentumTradeDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IIsTrendTradeInput">Trend trade</label>
                                        <select class="text-center form-control" id="IsTrendTradeInput" data-bind="IsTrendTradeDisplay" asp-for="CurrentTrade.IsTrendTradeDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsTriggerTrendingInput">Trigger trending</label>
                                        <select class="text-center form-control" id="IsTriggerTrendingInput" data-bind="IsTriggerTrendingDisplay" asp-for="CurrentTrade.IsTriggerTrendingDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="Is4HTrendingInput">4H trending</label>
                                        <select class="text-center form-control" id="Is4HTrendingInput" data-bind="Is4HTrendingDisplay" asp-for="CurrentTrade.Is4HTrendingDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsDTrendingInput">D trending</label>
                                        <select class="text-center form-control" id="IsDTrendingInput" data-bind="IsDTrendingDisplay" asp-for="CurrentTrade.IsDTrendingDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                    <div class="form-group col-12 col-md-6 col-lg">
                                        <label class="d-block text-nowrap min-width-60" for="IsSignalBarStrongReversalDisplayInput">Signal bar strong reversal</label>
                                        <select class="text-center form-control" id="IsSignalBarStrongReversalDisplayInput" data-bind="IsSignalBarStrongReversalDisplay" asp-for="CurrentTrade.IsSignalBarStrongReversalDisplay" asp-items="Model.YesNoOptions"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card body ends -->
                <!-- Footer body begins -->
               @*  <div class="card-footer d-flex justify-content-start mt-2">
                    <button class="btn btn-primary editorOnBtns" id="btnUpdate">
                        <span class="text"><i class="fa-regular fa-floppy-disk mr-2"></i>Update</span>
                    </button>
                </div> *@
                <!-- Footer body ends -->
            </div>
    </div>
</div>